{
  "extends": "eslint-config-opentable-es5",
  "globals": {
    "describe": true,
    "xdescribe": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "context": true
  },
  "rules": {
    "strict": [0],
    "one-var": [0, "always"],         // http://eslint.org/docs/rules/one-var
    "func-names": 0,                  // http://eslint.org/docs/rules/func-names
    "new-cap": 1,
    "no-unused-expressions": 0
  }
}


